{{define "content" -}}
<div class="container">
   <h3 class="title"> Real state </h3>
   <div class="products-container">
{{range $index, $item := .}}
    <div class="product" data-name="p-{{$index}}">
        <strong>{{$item.Title}}</strong> <br/>
        Ambientes: {{$item.Ambients}} <br/>
        Superficie Cubierta: {{$item.CoveredArea}} m2 <br/>
        Superficie Total: {{$item.TotalArea}} m2 <br/>
        Barrio: {{$item.Neighborhood}}<br/>
        Direccion: {{$item.Address}}<br/>
        Precio: {{$item.Price}}<br/>
        Permalink: <a href={{$item.Permalink}}>{{$item.Permalink}}</a>
    </div>
    <br/>
{{end}}
</div>
{{end}}